<resources>

    <!--Main App Theme-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <!--Main Linear Layout Style-->
    <style name="LL">
        <item name="android:padding">@dimen/LLPadding</item>
    </style>

    <!--Albums Header TextView Style-->
    <style name="AlbumHeaderStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <!--Albums TextViews Style-->
    <style name="AlbumsStyle">
        <item name="android:paddingBottom">@dimen/AlbumsPaddingBottom</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--Skipp Button Style-->
    <style name="SkipButton">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">@dimen/SkipButtonMargin</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <!--Back to main menu Button Style-->
    <style name="BackToMainButton">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">@dimen/BackToMain</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <!--Now Playing Style-->
    <style name="SongNowPlaying">
        <item name="android:padding">@dimen/SongNowPlayingPadding</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--Seek Bar TextView Style-->
    <style name="seekBarTextViewStyle">
        <item name="android:padding">@dimen/SeekBarTextViewPadding</item>
    </style>

</resources>
